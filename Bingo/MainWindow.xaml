<Window x:Class="Bingo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bingo"
        mc:Ignorable="d"
        Title="B i n g o" Height="650" Width="1400" FontSize="36">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Start spel" Click="OnStartGameClicked"/>
        </Menu>

        <Grid x:Name="player1Grid" DockPanel.Dock="Left" Width="600">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="2" Grid.Row="2" BorderBrush="Black" BorderThickness="1">
                <Image  Source="/logoPXL.png" />
            </Border>

        </Grid>

        <Grid x:Name="player2Grid" DockPanel.Dock="Right" Width="600">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="2" Grid.Row="2" BorderBrush="Black" BorderThickness="1">
                <Image  Source="/logoPXL.png"/>
            </Border>

        </Grid>

        <ListBox DockPanel.Dock="Right" x:Name="bingoNumbersListBox"/>
    </DockPanel>
</Window>
